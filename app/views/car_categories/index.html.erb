<% if @car_categories == [] %>
      <h1><%= "Nenhuma categoria cadastrada"%></h1>
<% else %> 
      <h1> Categorias </h1>
        <% @car_categories.each do |car_category| %>
            <%= link_to car_category.name, car_category_path(id: car_category.id) %>
        <% end %>
  <% end %>
  <%= link_to "Voltar", root_path %>