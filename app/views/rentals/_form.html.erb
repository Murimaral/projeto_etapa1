
<%= form_with model: rental, local: true do |f| %>
<h1>Data de início</h1>
<div>
<%= f.label :start_date, 'Data de início' %>
<%= f.date_field :start_date %>
</div>
<div>
<%= f.label :end_date, 'Data de término' %>
<%= f.date_field :end_date %>
</div>
<div>
<%= f.label :client_id %>
<%= f.collection_select :client_id, @clients, :id, :information %>
<!-- o ultimo arg do collection é o metodo daquele objeto com o qual estou interagindo, criou-se o metodo information no model -->
</div>
<div>
<%= f.label :car_category_id %>
<%= f.collection_select :car_category_id, @car_categories, :id, :name %>
</div>
<div>
<%= f.submit 'Agendar' %>
</div>

<% end %>
